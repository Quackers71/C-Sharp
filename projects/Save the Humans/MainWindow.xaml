<Window x:Class="Save_the_Humans.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Save_the_Humans"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Width="76" Grid.Row="1"/>
        <ProgressBar Grid.Column="1" HorizontalAlignment="Center" Height="10" Grid.Row="1" VerticalAlignment="Center" Width="100"/>
        <ContentControl Grid.Column="2" Content="ContentControl" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center"/>
        <Canvas Grid.Column="1" Width="100" Height="100"/>
    </Grid>
</Window>
